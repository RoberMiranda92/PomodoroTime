    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f05b56</item>
        <item name="colorPrimaryDark">#f05b56</item>
        <item name="colorPrimaryVariant">#f05b56</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#f05b56</item>
        <item name="colorSecondaryVariant">#555555</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="colorOnBackground">#555555</item>
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#555555</item>
